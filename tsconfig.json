{
    "compilerOptions": {
        "baseUrl": ".",
        "rootDir": ".",
        "module": "es6",
        "target": "es5",
        "outDir": "lib",
        "moduleResolution": "node",
        "lib": ["dom", "es2016", "es2017.object"],
        "jsx": "react",
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "composite": true,
        "incremental": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "downlevelIteration": true,
        "paths": {
            "@geometric/*": ["packages/**/*/"],
            "@emotion/core": ["typings/emotion.d.ts"]
        }
    },
    "files": [],
    "exclude": [
        "node_modules",
        "dist",
        "lib",
        "__tests__",
        "**/*.test*",
        "**/*.spec*",
        "examples"
    ],
    "references": [
        { "path": "packages/common/copy-to-clipboard" },
        { "path": "packages/common/types" },
        { "path": "packages/components/avatar" },
        { "path": "packages/components/blockquote" },
        { "path": "packages/components/checkbox" },
        { "path": "packages/components/image" },
        { "path": "packages/components/label" },
        { "path": "packages/components/overlay" },
        { "path": "packages/components/radio" },
        { "path": "packages/components/textarea" },
        { "path": "packages/components/badge" },
        { "path": "packages/components/button" },
        { "path": "packages/components/code" },
        { "path": "packages/components/input" },
        { "path": "packages/components/modal" },
        { "path": "packages/components/panel" },
        { "path": "packages/components/select" },
        { "path": "packages/elements/emoji" },
        { "path": "packages/elements/heading" },
        { "path": "packages/theming/theme" }
    ]
}
